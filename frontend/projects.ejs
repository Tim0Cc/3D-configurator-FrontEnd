<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>3D-Configurator</title>
    <link rel="icon" href="https://freesvg.org/img/mono-kig-polygon.png">
		<style>
			body { margin: 0; }
		</style>
	</head>
	<body>
    <div class="container" style="margin-left:100px;margin-right:100px;margin-top:20px;margin-bottom:20px;">
      <div class="flexbox" style="display:flex;justify-content:space-between;">
        <h2>Projects</h2>
        <a href="/">New Project</a>
      </div>
      <% cuboids.forEach(cuboid => { %>
        <div class="flexbox" style="display:flex;justify-content:space-between;border-top:4px solid black;">
          <div class="flexitem">
            <div class="coboid">
              <h3> <%= cuboid.name %> </h3>
              <div class="configuration">
                <ul>
                  <li> Position: <%= cuboid.position %>  </li>
                  <li  style="background-color:<%= cuboid.color %>;"> Color: <%= cuboid.color %>  </li>
                  <li> Width: <%= cuboid.width %>  </li>
                  <li> Height: <%= cuboid.height %>  </li>
                  <li> Depth: <%= cuboid.depth %>  </li>
                </ul>
              </div>
            </div>
          </div>
          <div class="flexitem" style="margin-top:20px;margin-bottom:20px;">
            <div>
              <form action="/projects/<%= cuboid.id %>?_method=DELETE" method="POST">
                <button type="submit">Delete Project</button>
              </form>
            </div>
            <div>
              <a href="/<%= cuboid.id %>">Open Project</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </body>
</html>