<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>3D-Configurator</title>
		<style>
			body { margin: 0; }
		</style>
	</head>
	<body>
    <div class="container" style="margin-left:100px;margin-right:100px;margin-top:20px;margin-bottom:20px;">
      <div class="flexbox" style="display:flex;justify-content:space-between">
        <div class="form">
          <form action="/" method="POST" padding:20px">
            <div class="project">
              <label for="name">Project name</label>
              <input type="text" name="name" id="name" class="name" required>
              <button type="submit">Save configuration</button>
            </div>
            <div class="controls" style="padding:10px">
              <div class="controls-1">
                <label for="position">Zoom (z-position)</label>
                <input type="range" name="position" id="position" class="position" min="1" max="10" value="5">
                <label for="color">Color</label>
                <input type="color" name="color" id="color" class="color" value="#00ff00">
              </div>
              <div class="controls-2">
                <label for="width">width(x)</label>
                <input type="range" name="width" id="width" class="width" min="1" max="10" value="1">
                <label for="height">height(y)</label>
                <input type="range" name="height" id="height" class="height" min="1" max="10" value="1">
                <label for="depth">depth(z)</label>
                <input type="range" name="depth" id="depth" class="depth" min="1" max="10" value="1">
              </div>
            </div>
          </form>
        </div>
        <div class="links">
          <a href="/projects">Projects</a>
        </div>
      </div>
    </div>
		<script src="./three/three.js"></script>
    <script type="module" src="./js/three_module.js">
      import * as THREE from 'https://cdn.skypack.dev/three@0.130.1'; 
      const scene = new THREE.Scene();
    </script>
		<script type="text/javascript" src="./js/configure.js">
		</script>
	</body>
</html>